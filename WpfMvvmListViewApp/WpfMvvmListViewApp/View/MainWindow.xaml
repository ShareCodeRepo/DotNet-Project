        <customerApp:Detail
            x:Name="detail"
            Grid.Row="2"
            Margin="5"
            DataContext="{Binding SelectedCustomer}" />
        <StackPanel
            Grid.Row="3"
            Margin="5"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="75"
                Height="25"
                Margin="5"
                Command="{Binding AddCommand}"
                Content="Add" />
            <Button
                Width="75"
                Height="25"
                Margin="5"
                Command="{Binding RemoveCommand}"
                Content="Remove" />
            <Button
                Width="75"
